<% provide :title, @user.name %>
<div class="row">
  <aside>
    <section class="user_info">
      <h1 class="w3-text-brown txt_user">
        <%= @user.name %>
      </h1>
      <div id="orders">
        <%= render @orders %>
      </div>
      <div id="paginator">
        <%= paginate @orders, theme: "twitter-bootstrap-3", remote: true %>
      </div>
    </section>
  </aside>
</div>
