<% provide :title, t("users.edit.edit") %>
<h1><%= t "users.edit_user" %> <%= resource.name %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for resource, as: resource_name, url: registration_path(resource_name),
      html: { method: :put } do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, t("users.name") %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name",
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email, t("users.email") %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t "users.edit_confirm" %>: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, t("users.pass") %>
        <i>(<%= t "users.blank_pass" %>)</i><br />
        <%= f.password_field :password, autocomplete: "new-password",
          class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> <%= t "users.min_pass" %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t("users.confirm") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password, t("users.current") %>
        <i>(<%= t "users.pass_confirm" %>)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password",
          class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("users.update"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3><%= t "users.cancel" %></h3>

    <p><%= t "users.happy" %> <%= button_to t("users.cancel"),
      registration_path(resource_name), data: { confirm: t("movie.sure") },
      method: :delete, class: "btn btn-primary" %></p>
    <%= link_to t("users.back"), :back %>
  </div>
</div>
