<% if results.nil? || results.empty? %>
  <%= t ".no_result" %>
<% else %>
  <div id="paginator">
      <%= paginate results, theme: "twitter-bootstrap-3", remote: true %>
  </div>
  <div class="content main-movie">
    <ul id="movies" class="movies product-grid product-grid--max-4-col center">
      <%= render results %>
    </ul>
  </div>
<% end %>
